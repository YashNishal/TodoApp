    </style>
    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/four</item>
        <item name="colorPrimaryVariant">@color/three</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>
</resources>